<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AzureXamarinBlog.Views.NewPostPage"
		     Title="New Post">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="About" FontSize="Medium" />
            <Entry Text="{Binding Post.About}" FontSize="Small" />
            <Label Text="Content" FontSize="Medium" />
            <Editor Text="{Binding Post.Content}" FontSize="Small" Margin="0" />
            <Label Text="Tags" FontSize="Medium" />
            <Editor Text="{Binding Post.Tags}" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
